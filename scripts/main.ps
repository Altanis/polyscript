struct Scalar {
    x: int;
}

impl Deref for Scalar {
    type Target = int;
    fn deref(&self): &int {
        &self.x
    }
}

impl DerefMut for Scalar {
    type Target = int;
    fn deref_mut(&mut self): &mut int {
        &mut self.x
    }
}

let x = Scalar { x: 4 };
let y = *x;
*x = 7;